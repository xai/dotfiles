# Screenshot bindings
bindsym Print exec grim ~/Pictures/screenshot-$(date +%Y%m%d-%H%M%S).png
bindsym $mod+Print exec grim -g "$(slurp)" ~/Pictures/screenshot-$(date +%Y%m%d-%H%M%S).png
bindsym Shift+Print exec grim -g "$(slurp)" - | wl-copy
bindsym Ctrl+Print exec grim -g "$(slurp)" - | swappy -f -

# hacks - sway doesn't support floating_from, using title only
for_window [title=" is sharing your screen.$"] border none, sticky enable, move position 0 px -55 px
